  <span class="shipping-method__label uppercase-text order-total-label">
    {{ 'customer.order.shipping' | t }}
  </span>
  <span class="shipping-method__price uppercase-text order-letter-space-sm">
    {%- if shipping_method.price == 0 -%}
  	   {{ 'customer.order.shipping_free' | t }}
    {%- else -%}
      {{ shipping_method.price | money_without_currency }}
    {%- endif -%}
  </span>
</div>