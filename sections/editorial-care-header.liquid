{% if section.settings.title != blank %}
  <p class="care__header__title heading--1">{{ section.settings.title | upcase }}</p>
{% endif %}

{% if section.settings.caption != blank %}
  <p class="care__header__caption">{{ section.settings.caption }}</p>
{% endif %}

{% schema %}
  {
    "name": "Care header",
    "class": "care__header",
    "settings": [
      {
        "type": "header",
        "content": "Header"
      },  
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "caption",
        "label": "Caption"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background image"
      },
      {
        "type": "range",
        "id": "alignment",
        "label": "Image alignment",
        "info": "Selects where the image zooms when on mobile.",
        "min": 0,
        "max": 100,
        "step": 5,
        "default": 50,
        "unit": "%"
      },
      {
        "type": "color",
        "id": "color",
        "label": "Fallback background color"
      }
    ]
  }
{% endschema %}

<style>
  .care__header {
    background-color: {{ section.settings.color }};
    {% if section.settings.image %}
      background-image: url("{{ section.settings.image | img_url: '1440x' }}");
      background-position: {{ section.settings.alignment }}% 0;
    {% endif %}
  }
</style>