{% include 'cart__classes' %}

<article class="{{ cart_classes }} js-cart">
  {% if settings.cart_promo_message != blank and settings.show_cart_promo_message %}
    <h1 class="cart__promo-message js-modal-click-exclude heading--4 hide-from@md">{{ settings.cart_promo_message }}</h1>
  {% endif %}

  <div class="cart__overview js-cart-overview js-modal-click-exclude">
    {% comment %} Injecting Cart items {% endcomment %}
  </div>

  <div class="cart__payment-details js-cart-payment-details js-modal-click-exclude {% if cart.item_count == 0 %}is-hidden{% endif %}">
    {% if settings.cart_promo_message != blank and settings.show_cart_promo_message %}
      <h1 class="cart__promo-message js-modal-click-exclude heading--4 hide-until@md">{{ settings.cart_promo_message }}</h1>
    {% endif %}

    {% if settings.enable_gift_products %}
      <div class="cart__gift js-cart-gift">
        <p class="cart__gift__description js-cart-gift-description uppercase-text">{{ 'gift_product.gift_description' | t }}</p>
        <button type="button" class="cart__gift__button button button--secondary js-cart-gift-button">{{ 'gift_product.add_gift' | t }}</button>
      </div> 
    {% endif %}

    {% include 'cart__totals' %}
  </div>
  
</article>

